{"ast":null,"code":"// @ is an alias to /src\nimport ModalComp from \"@/components/ModalComp.vue\";\nimport { ref } from \"vue\";\nimport { useStore } from \"vuex\";\nimport AlertComp from \"@/components/AlertComp.vue\";\nexport default {\n  name: \"HomeView\",\n  components: {\n    ModalComp,\n    AlertComp\n  },\n\n  setup() {\n    // console.log(this.$store);\n    const store = useStore();\n    const modalActive = ref(false);\n    const alertActive = ref(false);\n\n    const connect = async () => {\n      if (await store.commit(\"connectWallet\")) {\n        await console.log(store.state.caver);\n        await toggleModal();\n      }\n    };\n\n    const toggleModal = () => {\n      modalActive.value = !modalActive.value;\n    };\n\n    const toggleAlert = () => {\n      alertActive.value = !alertActive.value;\n    };\n\n    return {\n      modalActive,\n      connect,\n      toggleModal,\n      alertActive,\n      toggleAlert\n    };\n  }\n\n};","map":{"version":3,"mappings":"AAkBA;AACA,OAAOA,SAAP,MAAsB,4BAAtB;AACA,SAASC,GAAT,QAAoB,KAApB;AACA,SAASC,QAAT,QAAyB,MAAzB;AACA,OAAOC,SAAP,MAAsB,4BAAtB;AAEA,eAAe;AACbC,MAAI,EAAE,UADO;AAEbC,YAAU,EAAE;AACVL,aADU;AAEVG;AAFU,GAFC;;AAObG,OAAK,GAAG;AACN;AAEA,UAAMC,KAAI,GAAIL,QAAQ,EAAtB;AAEA,UAAMM,WAAU,GAAIP,GAAG,CAAC,KAAD,CAAvB;AACA,UAAMQ,WAAU,GAAIR,GAAG,CAAC,KAAD,CAAvB;;AAEA,UAAMS,OAAM,GAAI,YAAY;AAC1B,UAAI,MAAMH,KAAK,CAACI,MAAN,CAAa,eAAb,CAAV,EAAyC;AACvC,cAAMC,OAAO,CAACC,GAAR,CAAYN,KAAK,CAACO,KAAN,CAAYC,KAAxB,CAAN;AACA,cAAMC,WAAW,EAAjB;AACF;AACD,KALD;;AAOA,UAAMA,WAAU,GAAI,MAAM;AACxBR,iBAAW,CAACS,KAAZ,GAAoB,CAACT,WAAW,CAACS,KAAjC;AACD,KAFD;;AAIA,UAAMC,WAAU,GAAI,MAAM;AACxBT,iBAAW,CAACQ,KAAZ,GAAoB,CAACR,WAAW,CAACQ,KAAjC;AACD,KAFD;;AAIA,WAAO;AAAET,iBAAF;AAAeE,aAAf;AAAwBM,iBAAxB;AAAqCP,iBAArC;AAAkDS;AAAlD,KAAP;AACD;;AA/BY,CAAf","names":["ModalComp","ref","useStore","AlertComp","name","components","setup","store","modalActive","alertActive","connect","commit","console","log","state","caver","toggleModal","value","toggleAlert"],"sourceRoot":"","sources":["/home/lorancecall/Projects/vuejs-tutorial/klaytn-nft-transfer/src/views/HomeView.vue"],"sourcesContent":["<template>\n  <div>\n    <div class=\"title\">\n      <h1>Klaytn NFT transfer</h1>\n    </div>\n    <div class=\"home\">\n      <ModalComp @close=\"toggleModal\" :modalActive=\"modalActive\" />\n      <button @click=\"connect\" type=\"button\">Connect Wallet</button>\n      <alert-comp @close=\"toggleAlert\" :alertActive=\"alertActive\">\n        <div class=\"modal-content\">\n          <p>Kaikas is not installed</p>\n        </div>\n      </alert-comp>\n    </div>\n  </div>\n</template>\n\n<script>\n// @ is an alias to /src\nimport ModalComp from \"@/components/ModalComp.vue\";\nimport { ref } from \"vue\";\nimport { useStore } from \"vuex\";\nimport AlertComp from \"@/components/AlertComp.vue\";\n\nexport default {\n  name: \"HomeView\",\n  components: {\n    ModalComp,\n    AlertComp,\n  },\n\n  setup() {\n    // console.log(this.$store);\n\n    const store = useStore();\n\n    const modalActive = ref(false);\n    const alertActive = ref(false);\n\n    const connect = async () => {\n      if (await store.commit(\"connectWallet\")) {\n        await console.log(store.state.caver);\n        await toggleModal();\n      }\n    };\n\n    const toggleModal = () => {\n      modalActive.value = !modalActive.value;\n    };\n\n    const toggleAlert = () => {\n      alertActive.value = !alertActive.value;\n    };\n\n    return { modalActive, connect, toggleModal, alertActive, toggleAlert };\n  },\n};\n</script>\n\n<style lang=\"scss\" scoped>\n.title {\n  height: 20vh;\n}\n\n.home {\n  height: 80vh;\n}\n\n.title,\n.home {\n  background-color: rgba(0, 176, 235, 0.5);\n  display: flex;\n  justify-content: center;\n  align-items: center;\n\n  .modal-content {\n    display: flex;\n    flex-direction: column;\n\n    input {\n      position: relative;\n    }\n\n    h1,\n    p {\n      margin-bottom: 16px;\n    }\n\n    h1 {\n      font-size: 32px;\n    }\n\n    p {\n      font-size: 18px;\n    }\n  }\n}\n</style>"]},"metadata":{},"sourceType":"module"}